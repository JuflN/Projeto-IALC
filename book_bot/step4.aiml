<?xml version="1.0.1" encoding="UTF-8"?>
<aiml>
    <!-- Sim ou Não no step 4 -->
    <category>
        <pattern>sim</pattern>
        <template>
            <condition name="step" value="4">
                <think><set name="step">5</set></think>
		<think><set name="same_genre">1</set></think>
                Ótimo! Qual nota você daria para o livro <get name="livro"/> de 1 a 5?
            </condition>
        </template>
    </category>

    <category>
        <pattern>nao</pattern>
        <template>
            <condition name="step" value="4">
                <think><set name="step">5</set></think>
		<think><set name="same_genre">0</set></think>
                Entendido! Qual nota você daria para o livro <get name="livro"/> de 1 a 5?
            </condition>
        </template>
    </category>

    <category>
        <pattern>*</pattern>
        <template>
            <condition name="step" value="4">
                Não entendi, por favor responda com 'sim' ou com 'não'.
            </condition>
        </template>
    </category>
</aiml>
